generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RentalStatus {
  ACTIVE
  RETURNED
}

model Course {
  id Int @id @default(autoincrement())
  title String
  description String?
  createdAt DateTime @default(now())
  startDate DateTime
  endDate DateTime
  instructors Instructor[] @relation("InstructorsCourse")
  assignments Assignment[] @relation("AssignmentsCourse")
  students Student[] @relation("StudentsCourse")
}

model Instructor {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  experience Int
  courses Course[] @relation("InstructorsCourse")

}

model Student {
  id Int @id @default(autoincrement())
  name String
  surname String
  email String @unique
  enrollmentDate DateTime
  courses Course[] @relation("StudentsCourse")
}

model Assignment {
  id Int @id @default(autoincrement())
  courses Course[] @relation("AssignmentsCourse")
}

